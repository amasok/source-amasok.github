---
pageable: true
per_page: 5
layout: layouts/blog
---
<h2>Articles tagged '<%= tagname %>'</h2>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <article class="blog-post" >
    <h1><%= link_to article.title, article %> <span><%= article.date.strftime('(%y/%m/%d %H:%M)') %></span></h1>
    <p>tags:<% article.tags.each do |tag, articles| %>
    <%= link_to tag, tag_path(tag) %>,
    <% end %></p>
    <section class="text">
  <%= article.body %>
    </section>
    </article>
  <% end %>
</ul>
<%= partial("layouts/pagination", :locals => { 
  :paginate => paginate,
  :num_pages => num_pages,
  :page_number => page_number,
  :prev_page => prev_page,
  :next_page => next_page
}) %>
