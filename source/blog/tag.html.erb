---
pageable: true
per_page: 5
layout: layouts/blog
---
<h2>Articles tagged '<%= tagname %>'</h2>
  <% page_articles.each_with_index do |article, i| %>
    <article class="blog-post" >
    <h1 class="title"><%= link_to article.title, article %></h1>
    <span><%= article.date.strftime('%Y/%m/%d %H:%M') %> tags:<% article.tags.each do |tag, articles| %>
    <%= link_to tag, tag_path(tag) %>,
  <% end %></span>
    <section class="text">
  <%= article.body %>
    </section>
    </article>
  <% end %>
<%= partial("layouts/pagination", :locals => { 
  :paginate => paginate,
  :num_pages => num_pages,
  :page_number => page_number,
  :prev_page => prev_page,
  :next_page => next_page
}) %>
